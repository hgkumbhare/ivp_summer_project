			 * BufferedImage(colorImage.getWidth(), colorImage.getHeight(),
			 * BufferedImage.TYPE_BYTE_GRAY); g = grayImage.getGraphics();
			 * g.drawImage(colorImage, 0, 0, null); g.dispose();
